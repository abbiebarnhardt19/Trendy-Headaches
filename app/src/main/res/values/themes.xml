<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/background_color</item>  <!-- Set global background color -->
        <item name="colorPrimaryVariant">@color/background_color</item>  <!-- Set background variant -->
        <item name="colorOnPrimary">@color/text_icon_color</item>  <!-- Text color on primary background -->

        <!-- Apply text and icon colors globally -->
        <item name="android:textColor">@color/text_icon_color</item>  <!-- Apply text color globally -->
        <item name="android:textColorPrimary">@color/text_icon_color</item>  <!-- Primary text color -->
        <item name="android:textColorSecondary">@color/text_icon_color</item>  <!-- Secondary text color -->
        <item name="android:textColorHint">@color/text_icon_color</item>  <!-- Hint text color -->

        <!-- Apply background color to every screen -->
        <item name="android:windowBackground">@color/background_color</item>  <!-- Set global background color for all activities -->
        <item name="android:textSize">50dp</item>
        <!-- Bottom navigation text and icon color -->
        <item name="colorOnSecondary">@color/text_icon_color</item>  <!-- Text color on secondary background -->
    </style>



</resources>
